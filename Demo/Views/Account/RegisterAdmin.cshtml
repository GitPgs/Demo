@model RegisterAdminVM

@{
    ViewBag.Title = "";
}
@section head {
    <style>
        main {
            margin: 0;
            background: url('/Images/hostel.jpg') no-repeat;
            background-size: cover;
        }

        .form label {
            background-color: white;
        }

        .form input {
            width: 450px;
        }

        .form {
            display: flex;
            flex-direction: column;
            padding: 20px;
            background: #fff;
            width: 500px;
            height: 1000px;
            margin: auto;
            background-color: #fff;
            box-shadow: 20px 20px 50px grey;
        }

        select {
            width: 450px;
            height: 30px;
        }

        button {
            margin-top: 50px;
            display: inline-block;
            padding: 5px 8px;
            font-size: 20px;
            cursor: pointer;
            text-align: center;
            text-decoration: none;
            outline: none;
            color: #fff;
            background-color: #000;
            border: none;
            width: 450px;
        }

            button:hover {
                background-color: #0009;
            }

        span {
            color: red;
        }
    </style>

}
<form class="form" method="post" enctype="multipart/form-data">
    <h1 class="title">Sign Up Admin</h1>
    @Html.ValidationSummary(true)

   

    @Html.LabelFor(m => m.Username)
    @Html.TextBoxFor(m => m.Username, new { maxlength = 20, autofocus = "" })
    @Html.ValidationMessageFor(m => m.Username)
    @**@


    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { maxlength = 100 })
    @Html.ValidationMessageFor(m => m.Name)

    @Html.LabelFor(m => m.Password)
    @Html.PasswordFor(m => m.Password, new { maxlength = 20 })
    @Html.ValidationMessageFor(m => m.Password)


    

    @Html.LabelFor(m => m.Email)
    @Html.TextBoxFor(m => m.Email, new { maxlength = 100 })
    @Html.ValidationMessageFor(m => m.Email)



    <section>
        <button>Sign Up</button>
    </section>
</form>



